<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#f1c40f">

    <TextView
        android:id="@+id/setyouralarm"
        android:text="Set Your Alarm"
        android:textSize="46sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2c3e50" />
        <!--android:background="@drawable/yourcar"-->

    <TextView
        android:id="@+id/hourText"
        android:text="Hour"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setyouralarm"/>

    <EditText
        android:id="@+id/hourField"
        android:hint="(0~23hr)"
        android:textColorHint="#ffffff"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/setyouralarm"/>

    <TextView
        android:id="@+id/minuteText"
        android:text="Minute"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hourText"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/minuteField"
        android:hint="(0~59m)"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/setyouralarm"/>

    <ImageButton
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/donebutton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
         />


</LinearLayout>