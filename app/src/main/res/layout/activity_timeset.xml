<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#394166">

    <TextView
        android:id="@+id/setyouralarm"
        android:text="Set Your Alarm"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <!--android:background="@drawable/yourcar"-->

    <TextView
        android:id="@+id/hour"
        android:text="Hour"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setyouralarm"/>

    <EditText
        android:id="@+id/hourField"
        android:hint="(0~23hr)"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/setyouralarm"/>

    <TextView
        android:id="@+id/minute"
        android:text="Minute"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hour"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/minuteField"
        android:hint="(0~59m)"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/setyouralarm"/>

    <ImageButton
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/donebutton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>


</LinearLayout>